<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:a="http://schemas.android.com/apk/res/android"
  a:layout_width="match_parent"
  a:layout_height="match_parent"
  a:gravity="center"
  a:orientation="vertical" >

  <TextView
    a:layout_width="wrap_content"
    a:layout_height="wrap_content"
    a:padding="24dp"
    a:text="@string/warning_text" />

  <TextView
    a:id="@+id/answer_text_view"
    a:layout_width="wrap_content"
    a:layout_height="wrap_content"
    a:padding="24dp" />

  <Button
    a:id="@+id/show_answer_button"
    a:layout_width="wrap_content"
    a:layout_height="wrap_content"
    a:text="@string/show_answer_button" />

  <TextView
    a:id="@+id/api_version_text_view"
    a:layout_width="wrap_content"
    a:layout_height="wrap_content"
    a:padding="24dp" />
  
</LinearLayout>